@model Firma.Data.Data.Customers.User
@{
    ViewData["Title"] = "Edycja Roli Użytkownika";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="fa-solid fa-user-shield me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <h5 class="card-title">Użytkownik</h5>
                    <p class="card-text"><strong>Nazwa:</strong> @Model.Name</p>
                    <p class="card-text"><strong>Email:</strong> @Model.Email</p>
                </div>

                <hr />

                <form asp-action="Edit">
                    <input type="hidden" asp-for="IdUser" />
                    <div class="form-group">
                        <label asp-for="Role" class="form-label fw-bold">Wybierz nową rolę</label>
                        <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<Firma.Data.Data.Customers.UserRole>()"></select>
                        <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>

                    <div class="form-group d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left me-2"></i>Anuluj
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa-solid fa-save me-2"></i>Zapisz zmianę
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

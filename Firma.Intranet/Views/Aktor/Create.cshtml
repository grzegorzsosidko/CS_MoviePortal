@model Firma.Data.Data.Movie.Aktor

@{
    ViewData["Title"] = "Dodaj Nowego Aktora";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0"><i class="fa-solid fa-user-plus me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Imie" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                            <input asp-for="Imie" class="form-control" placeholder="Wprowadź imię aktora" />
                        </div>
                        <span asp-validation-for="Imie" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Nazwisko" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                            <input asp-for="Nazwisko" class="form-control" placeholder="Wprowadź nazwisko aktora" />
                        </div>
                        <span asp-validation-for="Nazwisko" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DataUrodzenia" class="form-label fw-bold"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fa-solid fa-calendar-alt"></i></span>
                            <input asp-for="DataUrodzenia" type="date" class="form-control" />
                        </div>
                        <span asp-validation-for="DataUrodzenia" class="text-danger small"></span>
                    </div>

                    <div class="mb-4">
                        <label for="zdjecie" class="form-label fw-bold">Zdjęcie profilowe</label>
                        <input name="zdjecie" type="file" class="form-control" accept="image/*" />
                    </div>

                    <hr />

                    <div class="form-group d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left me-2"></i>Anuluj i wróć do listy
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fa-solid fa-check-circle me-2"></i>Utwórz Aktora
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

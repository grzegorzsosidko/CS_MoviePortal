@model Firma.Data.Data.Movie.Aktor

@{
    ViewData["Title"] = "Edycja Aktora";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="fa-solid fa-user-pen me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
                    <input type="hidden" asp-for="IdAktor" />
                    <input type="hidden" asp-for="ZdjecieUrl" />

                    <div class="row">
                        <div class="col-md-8">
                            <h4 class="mb-3 border-bottom pb-2">Dane osobowe</h4>
                            <div class="mb-3">
                                <label asp-for="Imie" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                                    <input asp-for="Imie" class="form-control" />
                                </div>
                                <span asp-validation-for="Imie" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Nazwisko" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-user"></i></span>
                                    <input asp-for="Nazwisko" class="form-control" />
                                </div>
                                <span asp-validation-for="Nazwisko" class="text-danger small"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DataUrodzenia" class="form-label fw-bold"></label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa-solid fa-calendar-alt"></i></span>
                                    <input asp-for="DataUrodzenia" type="date" class="form-control" />
                                </div>
                                <span asp-validation-for="DataUrodzenia" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <h4 class="mb-3 border-bottom pb-2">Zdjęcie</h4>
                            <div class="text-center">
                                @if (!string.IsNullOrEmpty(Model.ZdjecieUrl))
                                {
                                    <img src="@Model.ZdjecieUrl" class="img-fluid rounded-circle shadow-sm" style="width: 150px; height: 150px; object-fit: cover;" alt="Aktualne zdjęcie" />
                                    <p class="text-muted small mt-2">Aktualne zdjęcie</p>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center bg-light rounded-circle" style="width: 150px; height: 150px;">
                                        <i class="fa-solid fa-user-slash text-muted" style="font-size: 4rem;"></i>
                                    </div>
                                    <p class="text-muted small mt-2">Brak zdjęcia</p>
                                }
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="mb-4">
                        <label for="zdjecie" class="form-label fw-bold">Zmień zdjęcie</label>
                        <input name="zdjecie" type="file" class="form-control" accept="image/*" />
                        <div class="form-text">Wybierz nowe zdjęcie tylko jeśli chcesz je zaktualizować.</div>
                    </div>

                    <div class="form-group d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left me-2"></i>Anuluj i wróć
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa-solid fa-save me-2"></i>Zapisz zmiany
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

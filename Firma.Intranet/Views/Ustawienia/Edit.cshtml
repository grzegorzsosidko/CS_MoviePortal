@model Firma.Data.Data.AppSettings.Ustawienie

@{
    ViewData["Title"] = "Edycja Ustawienia";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0"><i class="fa-solid fa-pen-to-square me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>
                    <input type="hidden" asp-for="IdUstawienia" />

                    <div class="mb-3">
                        <label asp-for="Klucz" class="form-label fw-bold"></label>
                        <input asp-for="Klucz" class="form-control" readonly />
                        <div class="form-text">Klucz jest polem systemowym i nie można go zmieniać.</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Wartosc" class="form-label fw-bold"></label>
                        <textarea asp-for="Wartosc" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Wartosc" class="text-danger small"></span>
                    </div>

                    <hr />

                    <div class="form-group d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left me-2"></i>Anuluj i wróć
                        </a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fa-solid fa-save me-2"></i>Zapisz zmianę
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

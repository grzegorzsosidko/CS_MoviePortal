@model Firma.Data.Data.CMS.Strona

@{
    ViewData["Title"] = "Dodaj Nową Stronę";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0"><i class="fa-solid fa-file-circle-plus me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Tytul" class="form-label fw-bold"></label>
                        <input asp-for="Tytul" class="form-control" placeholder="Wprowadź tytuł, który będzie widoczny w menu" />
                        <span asp-validation-for="Tytul" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Tresc" class="form-label fw-bold">Treść strony</label>
                        <textarea asp-for="Tresc" class="form-control" rows="10" placeholder="Wpisz tutaj treść strony. Możesz używać znaczników HTML."></textarea>
                        <span asp-validation-for="Tresc" class="text-danger small"></span>
                        <div class="form-text">Dla lepszej edycji treści w przyszłości rozważ implementację edytora WYSIWYG, np. TinyMCE.</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Link" class="form-label fw-bold"></label>
                            <input asp-for="Link" class="form-control" placeholder="Np. o-nas (bez ukośników)" />
                            <span asp-validation-for="Link" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Pozycja" class="form-label fw-bold"></label>
                            <input asp-for="Pozycja" type="number" class="form-control" placeholder="Kolejność w menu" />
                            <span asp-validation-for="Pozycja" class="text-danger small"></span>
                        </div>
                    </div>

                    <hr />
                    <h4 class="mb-3">Ustawienia widoczności</h4>

                    <div class="mb-3">
                        <label asp-for="KategoriaStopki" class="form-label fw-bold"></label>
                        <select asp-for="KategoriaStopki" class="form-select" asp-items="Html.GetEnumSelectList<Firma.Data.Data.CMS.KategoriaStopki>()">
                            <option value="">-- Nie pokazuj w stopce --</option>
                        </select>
                        <span asp-validation-for="KategoriaStopki" class="text-danger"></span>
                    </div>

                    <div class="form-check form-switch mb-4">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="PokazWNavbar">
                        <label class="form-check-label" asp-for="PokazWNavbar">Czy pokazywać tę stronę w głównym pasku nawigacji?</label>
                    </div>

                    <hr />

                    <div class="form-group d-flex justify-content-between align-items-center mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fa-solid fa-arrow-left me-2"></i>Anuluj i wróć
                        </a>
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fa-solid fa-check-circle me-2"></i>Utwórz Stronę
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

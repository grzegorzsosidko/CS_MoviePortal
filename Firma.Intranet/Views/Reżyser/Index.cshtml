@model IEnumerable<Firma.Data.Data.Movie.Reżyser>

@{
    ViewData["Title"] = "Reżyserzy";
    int rowNumber = 1;
}

<div class="card shadow-lg border-0 col-md-8 mx-auto">
    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h2 class="mb-0">
            <i class="fa-solid fa-user-tie me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-plus-circle me-2"></i>Dodaj Nowego Reżysera
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered mb-0">
                <thead class="thead-dark">
                    <tr class="text-center">
                        <th style="width: 10%;">LP</th>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th style="width: 30%;">Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4">
                                <h4 class="text-muted">Brak reżyserów w bazie danych.</h4>
                                <p>Kliknij przycisk "Dodaj Nowego Reżysera", aby dodać pierwszego.</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="align-middle">
                                <td class="text-center fw-bold">@(rowNumber++)</td>
                                <td class="ps-3">@Html.DisplayFor(modelItem => item.Imie)</td>
                                <td class="ps-3">@Html.DisplayFor(modelItem => item.Nazwisko)</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.IdReżyser" class="btn btn-primary" title="Edytuj">
                                            <i class="fa-solid fa-pencil-alt me-1"></i> Edytuj
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdReżyser" class="btn btn-danger" title="Usuń">
                                            <i class="fa-solid fa-trash-alt me-1"></i> Usuń
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

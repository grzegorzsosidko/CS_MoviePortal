@using Microsoft.AspNetCore.Identity

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    // Zamiast kilku osobnych elementów 'li', tworze jeden element z klasą 'dropdown'
    <div class="nav-item dropdown">

        @* To jest przycisk, który będzie rozwijał menu. Wyświetla nazwę użytkownika. *@
        <a class="nav-link dropdown-toggle text-light" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle me-1"></i> Witaj, @User.Identity.Name!
        </a>

        @* A to jest kontener na wszystkie linki w menu *@
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">

            @* Istniejący link do "Moje Konto" *@
            <li>
                <a class="dropdown-item" asp-controller="User" asp-action="Index">
                    <i class="bi bi-person-lines-fill me-2"></i>Moje konto
                </a>
            </li>

            @* NOWY link do "Moje ulubione filmy" *@
            <li>
                <a class="dropdown-item" asp-controller="User" asp-action="MojeUlubione">
                    <i class="bi bi-heart-fill me-2"></i>Moje ulubione filmy
                </a>
            </li>

            @* Separator dla lepszej czytelności *@
            <li><hr class="dropdown-divider"></li>

            @* Istniejący przycisk wylogowania, teraz jako element menu *@
            <li>
                <form class="form-inline" asp-controller="Account" asp-action="Logout">
                    <button type="submit" class="dropdown-item">
                        <i class="bi bi-box-arrow-right me-2"></i>Wyloguj
                    </button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    // Ta część pozostaje bez zmian
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Zarejestruj się</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Zaloguj</a>
        </li>
    </ul>
}